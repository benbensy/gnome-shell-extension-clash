{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "lib": ["ESNext"],
        "strictNullChecks": true,
        "exactOptionalPropertyTypes": true,
        "types": [
            "@girs/gjs",
            "@girs/gjs/dom",
            "@girs/gnome-shell/ambient",
            "@girs/gnome-shell/extensions/global",
            "@girs/gtk-4.0"
        ],
        "paths": {
            "@/*": ["./src/*"]
        }
    }
}
