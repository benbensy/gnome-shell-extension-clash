{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "lib": ["ESNext", "DOM"],
        "strictNullChecks": true,
        "exactOptionalPropertyTypes": true,
        "paths": {
            "@/*": ["./src/*"]
        }
    }
}
